#include <stdio.h>

int main() {int i,workinghours,overtime;
float overtimepay;
for(i=1;i<=10;i++)
    {printf("enter the workinghours of employee %d \n",i);
    scanf("%d",&workinghours);
    if(workinghours>40)
    {overtime=workinghours-40;
     overtimepay=12*overtime;
     printf("employee number %d overtime pay is %f\n",i,overtimepay);
    }
    }
    return 0;
}
