#include <stdio.h>

int main(){
    int i,j,k,x=1;
    for(i=1;i<=4;i++)
    { k=1;
        for(j=1;j<=7;j++)
        {
            if(j>=5-i && j<=3+i && k)
            {
              printf("%d",x);
               k=0;
               x++;
            }
            else
            {
              printf(" ");
              k=1;
    
            }
            
            }
    printf("\n");
    }
    return 0;
}
